{
	"$id": "https://yazi-rs.github.io/schemas/keymap.json",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"$schema": {
			"default": "https://yazi-rs.github.io/schemas/keymap.schema.json",
			"type": "string"
		},
		"manager": {
			"type": "object",
			"properties": {
				"keymap": { "$ref": "#/$defs/keymap" },
				"prepend_keymap": { "$ref": "#/$defs/keymap" },
				"append_keymap": { "$ref": "#/$defs/keymap" }
			},
			"additionalProperties": false
		},
		"tasks": {
			"type": "object",
			"properties": {
				"keymap": { "$ref": "#/$defs/keymap" },
				"prepend_keymap": { "$ref": "#/$defs/keymap" },
				"append_keymap": { "$ref": "#/$defs/keymap" }
			},
			"additionalProperties": false
		},
		"select": {
			"type": "object",
			"properties": {
				"keymap": { "$ref": "#/$defs/keymap" },
				"prepend_keymap": { "$ref": "#/$defs/keymap" },
				"append_keymap": { "$ref": "#/$defs/keymap" }
			},
			"additionalProperties": false
		},
		"input": {
			"type": "object",
			"properties": {
				"keymap": { "$ref": "#/$defs/keymap" },
				"prepend_keymap": { "$ref": "#/$defs/keymap" },
				"append_keymap": { "$ref": "#/$defs/keymap" }
			},
			"additionalProperties": false
		},
		"completion": {
			"type": "object",
			"properties": {
				"keymap": { "$ref": "#/$defs/keymap" },
				"prepend_keymap": { "$ref": "#/$defs/keymap" },
				"append_keymap": { "$ref": "#/$defs/keymap" }
			},
			"additionalProperties": false
		},
		"help": {
			"type": "object",
			"properties": {
				"keymap": { "$ref": "#/$defs/keymap" },
				"prepend_keymap": { "$ref": "#/$defs/keymap" },
				"append_keymap": { "$ref": "#/$defs/keymap" }
			},
			"additionalProperties": false
		}
	},
	"$strOrStrArray": {
		"oneOf": [
			{ "type": "string" },
			{ "type": "array", "items": { "type": "string" } }
		]
	},
	"$defs": {
		"keymap": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"on":   { "$ref": "#/$strOrStrArray" },
					"run":  { "$ref": "#/$strOrStrArray" },
					"exec": { "$ref": "#/$strOrStrArray" },
					"desc": { "type": "string" }
				},
				"oneOf": [{ "required": ["on", "run"] }, { "required": ["on", "exec"] }]
			}
		}
	}
}
